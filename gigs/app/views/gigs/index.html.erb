
<h1>Gigs List</h1>

<table class="table">
  <thead>
    <tr>
      <th>Gig name</th>
      <th>Gig date</th>
      <th>Gig cache</th>
      <th>Gig type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gigs.each do |gig| %>
      <tr>
        <td><%= gig.gig_name %></td>
        <td><%= gig.gig_date %></td>
        <td><%= gig.gig_cache %></td>
        <td><%= gig.gig_type %></td>
        <td><%= link_to 'Show', gig %></td>
        <td><%= link_to 'Edit', edit_gig_path(gig) %></td>
        <td><%= link_to 'Destroy', gig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gig', new_gig_path, class:"btn btn-secondary" %>
