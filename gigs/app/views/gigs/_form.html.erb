<%= form_with(model: gig) do |form| %>
  <% if gig.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gig.errors.count, "error") %> prohibited this gig from being saved:</h2>

      <ul>
        <% gig.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-section">

  <div class="field form-group">
    <% form.label :gig_name %>
    <%= form.text_field :gig_name, class:'form-control', placeholder:"Gig Name" %>
  </div>

  <div class="form-group">
    <% form.label :gig_date %>
    <%= form.date_select :gig_date, class:'', placeholder:"Gig Date"%>
  </div>

  <div class="field form-group">
    <% form.label :gig_cache %>
    <%= form.text_field :gig_cache, class:'form-control',placeholder:"Gig Amount" %>
  </div>

  

  <%= form.select :gig_type, options_for_select([
  ["Gig Type, Select One", ""], 
  "Factura", 
  "Factura Indirecta",
  "B", 
  "Alta"]), 
  {}, { class: "form form-group form-control" } %>

  <div class="field form-group">
    <% form.label :user_id %>
    <%= form.number_field :user_id, id: :gig_user_id, class:'form-control', value:"current_user.id", type: :hidden %>
  </div>

  <div class="actions mb-5">
    <%= form.submit class:'btn btn-secondary btn-custom' %>
  </div>

  </div>
<% end %>
